{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "file",
      "filename": "${opts:base}/logs/pomelo-${opts:serverId}.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 100,
      "category": "pomelo"
    },
    {
      "type": "file",
      "filename": "${opts:base}/logs/kod-request.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 2,
      "category": "kod-request"
    },
    {
      "type": "file",
      "filename": "${opts:base}/logs/kod-warning.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 2,
      "category": "kod-warning"
    },
    {
      "type": "file",
      "filename": "${opts:base}/logs/kod-error.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 2,
      "category": "kod-error"
    },
    {
      "type": "file",
      "filename": "${opts:base}/logs/kod-errors.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 2,
      "category": "kod-errors"
    },
    {
      "type": "file",
      "filename": "${opts:base}/logs/kod-all.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 100,
      "category": "kod-all"
    },
    {
      "type": "smtp",
      "recipients": "zhangxuemin@batcatstudio.com",
      "sendInterval": 5,
      "transport": "SMTP",
      "sender": "local-ios.Warn <server_error@batcatstudio.com>",
      "SMTP": {
        "host": "smtp.exmail.qq.com",
        "secureConnection": true,
        "port": 465,
        "auth": {
          "user": "server_error@batcatstudio.com",
          "pass": "aisinile12032104"
        }
      },
      "category": "kod-mail-warning"
    },
    {
      "type": "smtp",
      "recipients": "zhangxuemin@batcatstudio.com",
      "sendInterval": 5,
      "transport": "SMTP",
      "sender": "local-ios.Error <server_error@batcatstudio.com>",
      "SMTP": {
        "host": "smtp.exmail.qq.com",
        "secureConnection": true,
        "port": 465,
        "auth": {
          "user": "server_error@batcatstudio.com",
          "pass": "aisinile12032104"
        }
      },
      "category": "kod-mail-error"
    }
  ],
  "levels": {
    "pomelo": "DEBUG",
    "kod-request": "DEBUG",
    "kod-warning": "DEBUG",
    "kod-error": "DEBUG",
    "kod-errors": "DEBUG",
    "kod-all": "DEBUG",
    "kod-mail-warning": "DEBUG",
    "kod-mail-error": "DEBUG"
  },
  "replaceConsole": true,
  "lineDebug": false
}
